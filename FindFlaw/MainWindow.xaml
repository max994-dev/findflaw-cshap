<Window x:Class="FindFlaw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:HelixToolkit="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        xmlns:local="clr-namespace:FindFlaw"
        mc:Ignorable="d"
        Title="FindFlaw" Height="720" Width="1200"
        Background="#F0F0F0" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="loadModelButton" Click="LoadModelButton_Click" 
                        Content="📁 Open Model" Foreground="White" Background="#0078D4" 
                        Padding="12,8" FontSize="12" FontWeight="Bold" Cursor="Hand"
                        BorderThickness="0"  Margin="0,0,10,0" />
                <Button x:Name="loadLinesButton" Click="LoadLinesButton_Click" 
                        Content="Load Lines" Foreground="White" Background="#0078D4" 
                        Padding="12,8" FontSize="12" FontWeight="Bold" Cursor="Hand"
                        BorderThickness="0"  Margin="0,0,10,0" />

                <Separator Background="#404040" Width="1" Margin="5,0" />

                <TextBlock Text="File:" Foreground="White" VerticalAlignment="Center" Margin="10,0,5,0" />
                <TextBlock x:Name="filePathLabel" Text="No file loaded" Foreground="#B0B0B0" 
                           VerticalAlignment="Center" Margin="0,0,20,0" />

                <Separator Background="#404040" Width="1" Margin="5,0" />

                <TextBlock Text="Model Color:" Foreground="White" VerticalAlignment="Center" Margin="10,0,5,0" />
                <ComboBox x:Name="modelColorCombo" Width="80" Margin="0,0,15,0" VerticalAlignment="Center"
                          SelectionChanged="ModelColorCombo_SelectionChanged">
                    <ComboBoxItem Content="Blue" IsSelected="True" />
                    <ComboBoxItem Content="Grey" />
                </ComboBox>

                <!-- Emission Alpha controls -->
                <Separator Background="#404040" Width="1" Margin="5,0" />

                <TextBlock Text="Glow Alpha:" Foreground="White"
                           VerticalAlignment="Center" Margin="10,0,5,0" />

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Slider x:Name="EmissionAlphaSlider"
                            Minimum="0"
                            Maximum="128"
                            Value="20"
                            Width="140"
                            TickFrequency="15"
                            IsSnapToTickEnabled="True"
                            Margin="0,0,5,0"
                            ToolTip="Adjust emissive glow strength (0 = off, 128 = max)"
                            ValueChanged="EmissionAlphaSlider_ValueChanged" />
                    <Border Background="#404040" CornerRadius="3" Padding="4,1" VerticalAlignment="Center">
                        <TextBlock x:Name="EmissionAlphaLabel"
                                   Text="60"
                                   Foreground="White"
                                   FontSize="11"
                                   VerticalAlignment="Center" />
                    </Border>
                    <Separator Background="#404040" Width="1" Margin="5,0" />

                    <TextBlock Text="Initial View:" Foreground="White"
                        VerticalAlignment="Center" Margin="10,0,5,0" />

                    <ComboBox x:Name="initialViewCombo"
                          Width="110"
                          VerticalAlignment="Center"
                          SelectionChanged="InitialViewCombo_SelectionChanged">
                        <ComboBoxItem Content="Top-Down" IsSelected="True" />
                        <ComboBoxItem Content="Bottom-Up" />
                    </ComboBox>

                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Info Bar -->
        <Border Grid.Row="1" Background="#E8E8E8" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Lines placed:" Foreground="#333333" FontSize="11" VerticalAlignment="Center" />
                <TextBlock x:Name="linesCountLabel" Text="0" Foreground="#0078D4" FontSize="11" 
                           FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBlock Text="Selected line:" Foreground="#333333" FontSize="11" VerticalAlignment="Center" Margin="23,0,0,0" />
                <TextBlock x:Name="selectedLineIdLabel" Text="None" Foreground="#0078D4" FontSize="11"
                    FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,20,0" />

                <TextBlock Text="Label:" Foreground="#333333" FontSize="11" VerticalAlignment="Center" />
                <TextBox x:Name="lineLabelTextBox"
                     Width="300"
                     FontSize="11"
                     Margin="5,0,0,0"
                     VerticalAlignment="Center"
                     />
            </StackPanel>
        </Border>

        <!-- 3D Viewport -->
        <Grid Grid.Row="2">
            <HelixToolkit:HelixViewport3D 
                x:Name="viewport3D" 
                ShowCoordinateSystem="True" 
                ShowCameraInfo="True"
                ZoomExtentsWhenLoaded="True"
                ZoomAroundMouseDownPoint="True"
                MouseDown="Viewport3D_MouseDown"
                >

                <HelixToolkit:DefaultLights />
                <ModelVisual3D x:Name="modelRoot" />

            </HelixToolkit:HelixViewport3D>

            <!-- Lines List Overlay (left, like measurement/annotation list in CAD/3D Slicer) -->
            <Border HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="15"
                Background="#CCF5F5F5"
                CornerRadius="4"
                Padding="8"
                Width="230">
                <DockPanel>
                    <TextBlock Text="Lines"
                       DockPanel.Dock="Top"
                       FontWeight="Bold"
                       FontSize="12"
                       Foreground="#333333"
                       Margin="0,0,0,4" />

                    <ListBox x:Name="lineListBox"
                         FontSize="12"
                         Background="#00000000"
                         BorderThickness="0"
                         SelectionChanged="LineListBox_SelectionChanged"
                         MouseDoubleClick="LineListBox_MouseDoubleClick">   

                        <ListBox.Resources>

                            <!-- Item Style -->
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="6"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border"
                                                    Background="#F3F3F3"
                                                    CornerRadius="4"
                                                    Padding="6">
                                                <ContentPresenter />
                                            </Border>

                                            <ControlTemplate.Triggers>

                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E2E2E2"/>
                                                </Trigger>

                                                <!-- Selected -->
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#D0E7FF"/>
                                                </Trigger>

                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                        </ListBox.Resources>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- ID -->
                                        <ColumnDefinition Width="10"/>
                                        <!-- Spacing -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Label -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Color Icon -->
                                    </Grid.ColumnDefinitions>

                                    <!-- ID Badge -->
                                    <Border Background="#0078D4"
                                        CornerRadius="3"
                                        Padding="4,1">
                                        <TextBlock Text="{Binding Id}"
                                            Foreground="White"
                                            FontSize="11"
                                            FontWeight="Bold"/>
                                    </Border>

                                    <!-- Label -->
                                    <TextBlock Grid.Column="2"
                                        Text="{Binding Label}"
                                        FontSize="12"
                                        Foreground="#333"
                                        TextTrimming="CharacterEllipsis"/>

                                    <Button Grid.Column="3"
                                        Width="18"
                                        Height="18"
                                        Margin="10,0,0,0"
                                        Padding="0"
                                        BorderThickness="0"
                                        Background="{Binding ColorBrush}"
                                        Tag="{Binding}"
                                        PreviewMouseLeftButtonDown="LineColorButton_PreviewMouseLeftButtonDown"
                                        PreviewMouseLeftButtonUp="LineColorButton_PreviewMouseLeftButtonUp"
                                        LostMouseCapture="LineColorButton_LostMouseCapture">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="9"
                                                     Background="{TemplateBinding Background}">
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </DockPanel>
            </Border>

            <!-- View Navigation Pad (top-right, similar to nav widgets in Fusion/Blender/SketchUp) -->
            <Border HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="15"
                Background="#66000000"
                CornerRadius="6"
                Padding="6">
                <StackPanel>
                    <TextBlock Text="View"
                       FontWeight="Bold"
                       FontSize="11"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,4" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Up -->
                        <Button Grid.Row="0" Grid.Column="1"
                            Width="28" Height="28"
                            Content="▲"
                            FontSize="12"
                            Margin="2"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Pan view up"
                            Click="ViewUpButton_Click" />

                        <!-- Left -->
                        <Button Grid.Row="1" Grid.Column="0"
                            Width="28" Height="28"
                            Content="◀"
                            FontSize="12"
                            Margin="2"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Pan view left"
                            Click="ViewLeftButton_Click" />

                        <!-- Center = Zoom Extents -->
                        <Button Grid.Row="1" Grid.Column="1"
                            Width="28" Height="28"
                            Content="●"
                            FontSize="10"
                            Margin="2"
                            Background="#555555"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Zoom extents"
                            Click="ViewCenterButton_Click" />

                        <!-- Right -->
                        <Button Grid.Row="1" Grid.Column="2"
                            Width="28" Height="28"
                            Content="▶"
                            FontSize="12"
                            Margin="2"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Pan view right"
                            Click="ViewRightButton_Click" />

                        <!-- Down -->
                        <Button Grid.Row="2" Grid.Column="1"
                            Width="28" Height="28"
                            Content="▼"
                            FontSize="12"
                            Margin="2"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Pan view down"
                            Click="ViewDownButton_Click" />
                    </Grid>

                    <!-- Zoom in/out row -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                        <Button Width="28" Height="24"
                            Content="+"
                            FontSize="12"
                            Margin="2"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Zoom in (FOV -)"
                            Click="ViewZoomInButton_Click" />
                        <Button Width="28" Height="24"
                            Content="−"
                            FontSize="12"
                            Margin="2"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Zoom out (FOV +)"
                            Click="ViewZoomOutButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>


            <!-- Key Mapping Legend (bottom-left, near frame rate/FOV area) -->
            <Border HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="15,180,15,15"
                Background="#66000000"
                CornerRadius="4"
                Padding="6">
                <StackPanel>
                    <TextBlock Text="Key Legend" 
                       FontWeight="Bold"
                       FontSize="11"
                       Foreground="White"
                       Margin="0,0,0,4" />

                    <!-- Position controls -->
                    <TextBlock Text="Position (Ctrl + Key)" 
                       FontSize="10" 
                       Foreground="#F0F0F0" />
                    <TextBlock Text="  X: Left / Right" 
                       FontSize="10" 
                       Foreground="#DDDDDD" />
                    <TextBlock Text="  Y: Up / Down" 
                       FontSize="10" 
                       Foreground="#DDDDDD" />
                    <TextBlock Text="  Z: Plus (+) / Minus (-)" 
                       FontSize="10" 
                       Foreground="#DDDDDD"
                       Margin="0,0,0,4" />

                    <!-- Target controls -->
                    <TextBlock Text="Target (Shift + Key):" 
                       FontSize="10" 
                       Foreground="#F0F0F0" />
                    <TextBlock Text="  X: Shift + Left / Right" 
                       FontSize="10" 
                       Foreground="#DDDDDD" />
                    <TextBlock Text="  Y: Shift + Up / Down" 
                       FontSize="10" 
                       Foreground="#DDDDDD" />
                    <TextBlock Text="  Z: Shift + + / -" 
                       FontSize="10" 
                       Foreground="#DDDDDD"
                       Margin="0,0,0,4" />

                    <!-- FOV controls -->
                    <TextBlock Text="Field of View:" 
                       FontSize="10" 
                       Foreground="#F0F0F0" />
                    <TextBlock Text="  PageUp / PageDown" 
                       FontSize="10" 
                       Foreground="#DDDDDD" />
                </StackPanel>
            </Border>

        </Grid>


        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#E8E8E8" Padding="10">
            <TextBlock x:Name="statusLabel" Text="Ready" Foreground="#333333" FontSize="11" />
        </StatusBar>
    </Grid>
</Window>
